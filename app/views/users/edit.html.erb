<h1 class="title">ユーザー編集</h1>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @user do |f| %>
          <div class="field">
            <%= f.label :nickname, "ユーザー名", class: "label" %>
            <%= f.text_field :nickname, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス", class: "label" %>
            <%= f.email_field :email, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード", class: "label" %>
            <%= f.password_field :password, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード（確認）", class: "label" %>
            <%= f.password_field :password_confirmation, class: "input" %>
          </div>



          <div class="field">
            <%= f.label :birthday, "生年月日", class: "label" %>
            <%= f.date_select :birthday, class: "select" %>
          </div>

          <div class="field">
            <%= f.label :profile, "プロフィール", class: "label" %>
            <%= f.text_area :profile, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :avatar, "プロフィール画像", class: "label" %>
            <%= f.file_field :avatar %>
          </div>

          <%= f.submit "更新", class: "button is-warning" %>
        <% end %>
      </div>
    </div>
  </div>
</section>