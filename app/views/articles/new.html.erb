<%= form_with model: @article, url:articles_path, local: true do |f| %>
  <div class="article-box">
    投稿する
    <%= f.text_area :instruction, class:"text", placeholder:"テキスト" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {class:"select-box", id:"article-category"})  %>
    <%= f.collection_select(:country_id, Country.all, :id, :name, {class:"select-box", id:"article-country"})%>
    <%= f.file_field :image, class: 'hidden' %>
    <%= f.submit "投稿する" ,class:"btn" %>
  </div>
<% end %>



